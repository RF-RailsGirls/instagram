<%= link_to "New Post", new_post_path%> <br>
<% @posts.each do |post| %>
Image:   <%=image_tag post.image,style: "width: 15%"%><br/><br/><br/>
Caption: <%= post.caption%>

<%= link_to 'Edit', edit_post_path(post) %> |
<%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you certain you want to delete this?' } %>
<%end%>

